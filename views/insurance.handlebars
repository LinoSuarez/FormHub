<form id="insurance" value="3">
<div class = "container" style="width:90%">
	<div class = "containerHeader" > 
		<div class = "row">
			<div class = "col-xs-12 text-left" id= "contact"> 
			<h1 id= "mainHeader" > <strong> Insurance Information </strong></h1>
			
			</div>
		</div>
	</div> <!--cont.1>-->
	
	<div class = "containerAddress" >
		   <fieldset>
                <legend id="address"> Please fill in the form below </legend>
                <div class="ptFullName">
                    <label class="fullNameLabel" for="FirstName">Full Name</label>
                    <div class="controls">
                        <input style="width: 20%" id="FirstName" name="FirstName" placeholder="Firstname" type="text" value="" />
                        <input style="width: 20%" id="MiddleName" name="MiddleName" placeholder="Middlename" type="text" value="" />
                        <input style="width: 20%" id="LastName" name="LastName" placeholder="Lastname" type="text" value="" />
                    </div>
                </div>
                <br />
                <div class="ptPhoneEmail">
                	
                	<input style="width: 20%" id="emPhoneNum" name="emPhone" placeholder="Phone Number" type="" value="" />
                	<label class="emPhoneNum" for="emPhoneNumber">Phone Number</label>
     
                    <input class="input-xxlarge" id="email" name="email" placeholder="email" type="text" value="" />
                    <label class="ptEmailLabel" for="Email">Email</label>
                   
                </div>
                <br />
                <div class="gender" id= "selectGender"> 
                	<label class= "ptGender" id="selectGender" for="ptGender"> Sex </label>
                	<br />
					<select class="ptGenderForm" style="width:150px">
					    <option value="">  </option>
			            <option value="Male"> Male </option>
			            <option value="Female"> Female </option>
			            <option value="N/A"> N/A </option>
					</select>
				</div>
				<br />

				<div class = "dateOfBirth" >
					<label class= "dateOfBirth" id= "selectDateOfBirth" for="ptBirthDate"> Date of Birth </label>
					<br />
						<select style="width: 15%" class="ptBirthMonthForm" style="width:150px"> 
							<option value="">  </option>
							<option value="January"> January </option>
			                <option value="February"> February </option>
			                <option value="March"> March </option>
			                <option value="April"> April </option>
			                <option value="May"> May </option>
			                <option value="June"> June </option>
			                <option value="July"> July </option>
			                <option value="August"> August </option>
			                <option value="September"> September </option>
			                <option value="October"> October </option>
			                <option value="November"> November </option>
			                <option value="December"> December </option>
			             </select>
			             <label class= "birthMonth" id= "month" for="ptBirthDate"> Month </label>

						<select style="width: 15%" class="ptBirthDateForm" id = "day" style="width:150px">
							<script>
			                  var min = 1,
			                  max = 31,
			                  select = document.getElementById("day");

			                  for (var i = min; i<=max; i++){
			                     var opt = document.createElement('option');
			                     opt.value = i;
			                     opt.innerHTML = i;
			                     select.appendChild(opt);
			                  }
	              			</script>
						</select>
						<label class= "birthDay" id= "day" for="ptBirthDay"> Day </label>

						<select style="width: 15%" class="ptBirthYearForm" id ="year" style="width:150px">
							<script>
				                var min = 1920,
				                max = 2017,
				                select = document.getElementById("year");
				                 for (var i = min; i < max;  i++) {
				                   var opt =document.createElement  ("option");
				                   opt.value =i;
				                   opt.innerHTML = i;
				                   select.appendChild(opt);
				                 }
              				</script>

						</select>
						<label class= "birthYear" id= "year" for="ptBirthYear"> Year </label>
				<br />

				</div>

            </fieldset>
    </div>
		<br />

		<div class = "containerInsurance1" > 
			<fieldset>
                <legend id="insuranceContact "> Insurance Information </legend>
             
                <div class="insuranceContactAdd"> 
            
                    <label class="insuranceStAddress" for="insuranceStAddress">Primary Insurance Company Address </label>
   					<br />
                        <input class="primaryInsurance1"style="width: 60%" id="primaryInsurance1" name="insurance1" placeholder=" Insurance Street Address " type="" value="" />
                    <br />
                    <label class="insuranceStAddress1" for="insuranceStAddress1"> Street Address </label>
                  
        		</div>
          	
     
				<div class="insuranceContactAdd2">
                        <input class="primaryInsurance2"style="width: 60%" id="primaryInsurance2" name="insurance2" placeholder="Insurance Street Address 2" type="text" value="" />
                     <br />
                     <label class="insuranceStAddress2" for="insuranceStAddress2"> Street Address 2 </label>
       
                <br />

                    <div class="insuranceCityControls">
                        <input style="width: 40%" id="insCityAddress" name="InsCityAddress" placeholder="City" type="text" value="" />
                        <br />
                        <label class="insCityAddressLabel" for="insCityAddress">City </label>
                        <br />
						<input style="width: 40%" id="insStateAddress" name="InsStateAddress" placeholder="State / Province" type="text" value="" />
						<br />
                        <label class="InsStateAddressLabel" for="InsStateAddress">State </label>
						<br />
                        <input style="width: 40%" id="insPostalCode" name="InsPostalCode" placeholder="Postal /Zip Code " type="text" value="" />
                        <br />
                        <label class="InsPostalCodeLabel" for="InsPostalAddress">Zip Code </label>
                        <br />
                    	<input style="width: 40%" id="policyNum" name="InsPolicyNum" placeholder="Insurance Policy No. " type="text" value="" />
                        <br />
                        <label class="InsPolicyNumber" for="InsPolicy">Insurance Policy Number </label>
					</div>	
           
            </fieldset>
  
		</div> <!--cont.3>-->

	<br />
				 <div class="submitform" data-type="control_button" id="submit">
		            <button id="submit_insurance_form" type="submit" class="formSubmitButton">
		              Submit Form
		            </button>
		      	</div>
			</fieldset>
	
		
</div> <!--cont.all>-->

</form>
